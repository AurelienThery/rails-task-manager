<div class="container mt-5">
  <div class="card border-3 border-warning shadow-lg">
    <div class="card-body">
      <h1 class="card-title text-center mb-4 text-warning fw-bold" style="font-family: 'Comic Sans MS', cursive;">
        <i class="fas fa-star me-2"></i><%= @task.title %>
      </h1>
      <div class="card-text mb-3">
        <p class="fs-5"><strong>Detail:</strong> <%= @task.details %></p>
        <div class="d-flex align-items-center mb-3">
          <p class="fs-5 me-3 mb-0"><strong>Completed?</strong></p>
          <%= form_with(model: @task, local: true, class: "d-flex align-items-center") do |f| %>
            <div class="form-check form-switch">
              <%= f.check_box :completed, class: "form-check-input", style: "width: 3em; height: 1.5em;", onchange: "this.form.submit();" %>
              <%= f.label :completed, class: "form-check-label ms-2 fs-5", style: "user-select: none;" do %>
                <%= @task.completed ? 'âœ¨ Yes!' : 'ðŸ˜Š Not yet' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-between mt-4">
        <%= link_to tasks_path, class: "btn btn-outline-warning btn-lg" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to your tasks
        <% end %>
        <%= link_to edit_task_path(@task), class: "btn btn-outline-warning btn-lg" do %>
          <i class="fas fa-edit me-2"></i>Update Your Task
        <% end %>
      </div>
      <div class="text-center mt-3">
        <%= link_to task_path(@task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this kawaii task?"},
            class: "btn btn-danger btn-lg" do %>
          <i class="fas fa-trash-alt me-2"></i>Delete Task
        <% end %>
      </div>
    </div>
  </div>
</div>
