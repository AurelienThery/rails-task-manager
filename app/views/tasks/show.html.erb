<h1>Task: <%= @task.title%></h1>
<p>detail: <%=@task.details%></p>
<p>completed? <%= @task.completed%></p>
<p><a href="#" class="link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"><%=link_to "Back to your tasks", tasks_path%>      </a></p>
<p><a href="#" class="link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"><%=link_to "Update Yours Tasks", edit_task_path(@task)%>    </a></p>
<%=
link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
