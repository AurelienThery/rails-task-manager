<div class="container-fluid py-5" style="background-color: #ffeaf4;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-4 border-warning shadow-lg" style="background-color: #fff0f5;">
        <div class="card-body">
          <h1 class="text-center mb-5 text-warning" style="font-family: 'Brush Script MT', cursive; font-size: 3.5rem; text-shadow: 2px 2px 4px #ffcccc;">
            ðŸŒŸâœ¨ Enchant Your Task âœ¨ðŸŒŸ
          </h1>

          <%= form_with model: @task, class: "needs-validation", novalidate: true do |f| %>
            <div class="mb-4">
              <%= f.label :title, class: "form-label fs-4 fw-bold text-warning", style: "font-family: 'Comic Sans MS', cursive;" %>
              <div class="input-group">
                <span class="input-group-text bg-warning text-white"><i class="fas fa-wand-magic-sparkles"></i></span>
                <%= f.text_field :title, class: "form-control form-control-lg", style: "border: 3px dotted #ffc107;", placeholder: "Sprinkle some magic on your task title", required: true %>
              </div>
              <div class="invalid-feedback">Oh no! Your magical task needs a title!</div>
            </div>

            <div class="mb-4">
              <%= f.label :details, class: "form-label fs-4 fw-bold text-warning", style: "font-family: 'Comic Sans MS', cursive;" %>
              <div class="input-group">
                <span class="input-group-text bg-warning text-white"><i class="fas fa-fairy"></i></span>
                <%= f.text_area :details, class: "form-control form-control-lg", style: "border: 3px dotted #ffc107;", rows: 4, placeholder: "Weave the enchanting details of your task", required: true %>
              </div>
              <div class="invalid-feedback">Don't forget to add some sparkly details!</div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Update Magical Task ðŸª„", class: "btn btn-warning btn-lg mt-4", style: "font-size: 1.5rem; border-radius: 50px; box-shadow: 0 0 15px #ffcc00;" %>
            </div>
          <% end %>

          <div class="text-center mt-5">
            <%= link_to tasks_path, class: "btn btn-outline-warning btn-lg px-5 py-3", style: "border-radius: 50px; font-size: 1.3rem; border-width: 3px; border-style: dashed;" do %>
              <i class="fas fa-arrow-left me-2"></i> Return to Your Magical Realm
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-4 text-center">
        <img src="https://example.com/kawaii-wizard.gif" alt="Kawaii Wizard" style="max-width: 150px;">
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-image: url('https://example.com/pastel-stars-pattern.jpg');
    background-repeat: repeat;
  }
  .card {
    position: relative;
    overflow: hidden;
  }
  .card::before, .card::after {
    content: 'ðŸŒˆ';
    font-size: 5rem;
    position: absolute;
    opacity: 0.2;
  }
  .card::before {
    top: -20px;
    left: -20px;
    transform: rotate(-45deg);
  }
  .card::after {
    bottom: -20px;
    right: -20px;
    transform: rotate(135deg);
  }
  .form-control:focus {
    border-color: #ffc107;
    box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
  }
</style>

<script>
// Bootstrap form validation
(function () {
  'use strict'
  var forms = document.querySelectorAll('.needs-validation')
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
})()
</script>

